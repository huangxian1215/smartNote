<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hxdesign.smartnote">

    <!-- SD卡读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.hxdesign.smartnote.dialog.DeleteTheme"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.hxdesign.smartnote.dialog.AddItem"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.hxdesign.smartnote.dialog.KeyIn"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="com.hxdesign.smartnote.dialog.AddTheme"/>
        <activity android:name="com.hxdesign.smartnote.TableDetailActivity"/>
        <activity android:name="com.hxdesign.smartnote.MainActivity"/>
        <activity android:name="com.hxdesign.smartnote.help.SmartNoteHelp"/>
    </application>

</manifest>